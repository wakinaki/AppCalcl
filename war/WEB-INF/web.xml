<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>ServerService</servlet-name>
    <servlet-class>com.wak.appcalc.server.ServerServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ServerService</servlet-name>
    <url-pattern>/appcalc/server</url-pattern>
  </servlet-mapping>
  
  <servlet>
 <servlet-name>DataStore</servlet-name>
 <servlet-class>com.wak.appcalc.server.DataStore</servlet-class>
</servlet>
<servlet-mapping>
 <servlet-name>DataStore</servlet-name>
 <url-pattern>/store</url-pattern>

</servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>AppCalc.html</welcome-file>
  </welcome-file-list>

</web-app>
